{
  "manifest_version": 3,
  "name": "CareerTracker - Job Search Manager",
  "version": "1.0.0",
  "description": "AI-powered job search management with LinkedIn integration, connection tracking, and application monitoring",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://linkedin.com/*",
    "https://*.greenhouse.io/*",
    "https://*.lever.co/*",
    "https://*.workday.com/*",
    "https://indeed.com/*",
    "https://*.indeed.com/*",
    "https://wellfound.com/*",
    "https://jobconnectiontracker-production.up.railway.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://linkedin.com/*",
        "https://*.greenhouse.io/*",
        "https://*.lever.co/*",
        "https://*.workday.com/*",
        "https://indeed.com/*",
        "https://*.indeed.com/*",
        "https://wellfound.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "CareerTracker - Job Search Manager",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/icon16.png", "icons/icon48.png", "icons/icon128.png", "icons/icon.svg"],
      "matches": ["<all_urls>"]
    }
  ]
}