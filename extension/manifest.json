{
  "manifest_version": 3,
  "name": "LinkedIn Job Tracker",
  "version": "1.0.0",
  "description": "Track LinkedIn profiles and job applications with AI-powered connection requests",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://linkedin.com/*",
    "https://*.greenhouse.io/*",
    "https://*.lever.co/*",
    "https://*.workday.com/*",
    "https://indeed.com/*",
    "https://*.indeed.com/*",
    "https://wellfound.com/*",
    "https://jobconnectiontracker-production.up.railway.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://linkedin.com/*",
        "https://*.greenhouse.io/*",
        "https://*.lever.co/*",
        "https://*.workday.com/*",
        "https://indeed.com/*",
        "https://*.indeed.com/*",
        "https://wellfound.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Job Tracker"
  },
  "web_accessible_resources": [
    {
      "resources": ["icon16.png", "icon48.png", "icon128.png"],
      "matches": ["<all_urls>"]
    }
  ]
}